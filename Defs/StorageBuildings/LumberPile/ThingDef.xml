<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- Wood Log 1x2 -->
  
	<ThingDef ParentName="ASMedievalStorageBase">
		<defName>ASMedievalLumberPileA</defName>
		<label>lumber pile</label>
		<graphicData>
			<texPath>ASMedieval/LumberPile/LumberPile1x2_A</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.0,3.0)</drawSize>
		</graphicData>
		<description>A more efficient way of storing large amounts of wood and lumber.</description>
		<fillPercent>0.30</fillPercent>
		<uiIconPath>ASMedieval/LumberPile/LumberPile1x2_C_north</uiIconPath>
		<uiIconScale>1.2</uiIconScale>
		<size>(1,2)</size>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>1</Flammability>
			<Beauty>0.5</Beauty>
			<Mass>4</Mass>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>10</costStuffCount>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<building>
			<maxItemsInCell>4</maxItemsInCell>
		</building>
		<modExtensions>
			<li Class="AdaptiveStorage.Extension">
				<lockStorageSettingsToStuff>true</lockStorageSettingsToStuff>
				<labelFormat>StuffAsNoun</labelFormat>
			</li>
		</modExtensions>
	</ThingDef>

  <!-- Wood Log 2x2 -->

  <ThingDef ParentName="ASMedievalStorageBase">
    <defName>ASMedievalLumberPileB</defName>
    <label>lumber pile</label>
    <graphicData>
      <texPath>ASMedieval/LumberPile/LumberPile2x2_A</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.0,3.0)</drawSize>
    </graphicData>
    <description>A more efficient way of storing large amounts of wood and lumber.</description>
    <fillPercent>0.30</fillPercent>
    <uiIconPath>ASMedieval/LumberPile/LumberPile2x2_C_north</uiIconPath>
    <uiIconScale>1.2</uiIconScale>
    <size>(2,2)</size>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>200</WorkToBuild>
      <Flammability>1</Flammability>
      <Beauty>0.5</Beauty>
      <Mass>4</Mass>
    </statBases>
    <stuffCategories>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>10</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <building>
      <maxItemsInCell>4</maxItemsInCell>
    </building>
    <!-- designatorDropdown>ASMedievalLumberPile</designatorDropdown -->
    <modExtensions>
      <li Class="AdaptiveStorage.Extension">
        <lockStorageSettingsToStuff>true</lockStorageSettingsToStuff>
        <labelFormat>StuffAsNoun</labelFormat>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>